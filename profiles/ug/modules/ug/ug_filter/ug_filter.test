<?php
class UGEventTestCase extends TaxonomyWebTestCase {
  public static function getInfo() {
    return array(
      'name' => 'UG Table',
      'description' => 'Test the UG table filter feature.',
      'group' => 'UG',
    );
  }

  function setUp() {
    $this->profile = 'ug';
    parent::setup();
    theme_enable(array('ug_cornerstone'));
    theme_disable(array('bartik'));
    variable_set('theme_default', 'ug_cornerstone');
  }
  
  function testResponsiveTags() {
    // Generate data
    $title = $this->randomName();
    
    // Create table with random classes
    
    // Opening Tag:
    $table = '<table class="table ';
    $class_count = rand(0, 6);
    for($i = 0; $i < $class_count; $i++) {
      $table .= $this->randomName() + " ";
    }
    $table .= '">';
    
    // Content:
    $row_count = rand(2, 6);
    $col_count = rand(5, 12);
    for($i = 0; $i < $row_count; $i++) {
      $table .= '<tr>';
      for($j = 0; $j < $col_count; $j++) {
        $table .= '<td>'.$this->randomName().'</td>';
      }
      $table .= '</tr>';
    }
    
    // Closing Tag:
    $table .= "</table>";
    
    debug($table);
    
    // Create node
    $settings = array('title' => $title);
    $settings['field_page_body'][LANGUAGE_NONE][0]['value'] = $table;
    $settings['field_page_body'][LANGUAGE_NONE][0]['format'] = 'filtered_html';
    $node = $this->drupalCreateNode($settings);
    
    // Get node
    $this->drupalGet('node/'.$node->nid);
    
    // Assert responsive tags
    
  }
}